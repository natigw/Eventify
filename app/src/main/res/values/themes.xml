<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Eventify" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Custom Eventify theme. -->
    <style name="Theme.Eventify" parent="Base.Theme.Eventify">
        <item name="colorPrimary">@color/eventify_primary</item>
        <item name="colorPrimaryVariant">@color/green_light_eventify</item>
        <item name="colorOnPrimary">@color/eventify_on_primary</item>
        <item name="android:navigationBarColor">@color/eventify_bottom_nav_background</item>
        <item name="android:statusBarColor">@color/eventify_background_primary</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:fontFamily">@font/inter_bold</item>-->
<!--        <item name="fontFamily">@font/inter_bold</item>-->
    </style>



    <!-- CUSTOM DATE PICKER THEME -->
    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/eventify_on_primary</item>
        <item name="colorPrimary">@color/purple_dark_eventify</item>
        <item name="colorSurface">@color/green_light_eventify</item>
    </style>

