<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottom_sheet_background_secondary"
    tools:context="">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePlacesComments1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePlacesComments2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <ImageView
        android:id="@+id/imageDrawerPlacesComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:src="@drawable/bottomsheet_drawer_element_on_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPlaceNameComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/purple_dark_eventify"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/guidelinePlacesComments2"
        app:layout_constraintStart_toStartOf="@+id/guidelinePlacesComments1"
        app:layout_constraintTop_toBottomOf="@+id/imageDrawerPlacesComments"
        tools:text="Venue name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaceComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/sample_comment"
        app:layout_constraintEnd_toStartOf="@+id/guidelinePlacesComments2"
        app:layout_constraintStart_toStartOf="@+id/guidelinePlacesComments1"
        app:layout_constraintTop_toBottomOf="@+id/textPlaceNameComments"
        app:layout_constraintBottom_toTopOf="@id/textInputWriteComment"/>

    <TextView
        android:id="@+id/noCommentsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:fontFamily="@font/inter_italic"
        android:text="@string/no_comments"
        android:textColor="@color/purple_dark_eventify"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/textInputWriteComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPlaceNameComments" />

    <ProgressBar
        android:id="@+id/progressBarCommentBSH"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/noCommentsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/noCommentsText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputWriteComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="4dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxStrokeColor="@color/purple_eventify"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/purple_eventify"
        app:boxBackgroundColor="@color/eventify_background_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSendComment"
        app:layout_constraintStart_toStartOf="@id/guidelinePlacesComments1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_comment"
            android:inputType="textEmailAddress"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSendComment"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/send"
        app:icon="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="@+id/textInputWriteComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputWriteComment" />

</androidx.constraintlayout.widget.ConstraintLayout>