<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.profile.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineProfile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/textProfileText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_bold"
        android:textAlignment="center"
        android:textColor="@color/purple_dark_eventify"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/guidelineProfile2"
        app:layout_constraintStart_toStartOf="@+id/guidelineProfile1"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/profile" />

    <Button
        android:id="@+id/btnReferral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/referral_program"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProfileText"/>

    <Button
        android:id="@+id/btnSubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscription"
        app:layout_constraintEnd_toEndOf="@+id/btnReferral"
        app:layout_constraintStart_toStartOf="@+id/btnReferral"
        app:layout_constraintTop_toBottomOf="@+id/btnReferral" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="@+id/btnSubs"
        app:layout_constraintStart_toStartOf="@+id/btnSubs"
        app:layout_constraintTop_toBottomOf="@+id/btnSubs" />

</androidx.constraintlayout.widget.ConstraintLayout>